extends layout.pug
block content
    h1 Books
    p
      a.button(href='/books/new') Create New Book
    form(method='POST' action='/books/search')
      input(type='text', name='search', placeholder='Search..')
      input(type='submit', value='Search')
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}`)=book.title
            td=book.author
            td=book.genre
            td=book.year
       
